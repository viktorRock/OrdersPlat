<section class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Informações</h2>
    </div>
    <form method="post" action="/upsert">
      {{#if order}}
      <input type="hidden" name="id" value="{{order.id}}" />
      {{/if}}
      <div class="mdl-card__supporting-text">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" name="customerName" value="{{order.customerName}}">
          <label class="mdl-textfield__label" for="sample1">Cliente...</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" name="productCode" id="productCode" value="{{order.productCode}}">
          <label class="mdl-textfield__label" for="sample1">Produto</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" pattern="[0-9]*" name="unitsOrdered" value="{{order.unitsOrdered}}">
          <label class="mdl-textfield__label" for="sample1">Units ordered...</label>
          <span class="mdl-textfield__error">Precisa ser um número inteiro</span>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" pattern="[0-9]*(\.[0-9]+)?" name="unitPrice" value="{{order.unitPrice}}">
          <label class="mdl-textfield__label" for="sample1">Preço Unitário (R$)...</label>
          <span class="mdl-textfield__error">Precisa ser um número positivo</span>
        </div>

        {{#if order}}
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label block">
          <input class="mdl-textfield__input" type="text" pattern="PENDENTE|PROCESSANDO|ENTREGUE" name="status" value="{{order.status}}">
          <label class="mdl-textfield__label" for="sample1">Status...</label>
          <span class="mdl-textfield__error">Precisar ser um dos valores a seguir PENDENTE, PROCESSANDO, or ENTREGUE</span>
        </div>
        {{/if}}
      </div>
      <div class="mdl-card__actions">
        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--colored mdl-button--raised">
          {{#if order}}Salvar{{else}}Criar{{/if}}
        </button>
        <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/">Cancelar</a>
      </div>
    </form>
  </div>
</section>
