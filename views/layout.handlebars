<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0"> -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">

  <!-- Add to homescreen for Chrome on Android -->
  <meta name="mobile-web-app-capable" content="yes">
  <link rel="icon" sizes="192x192" href="images/android-desktop.png">

  <!-- Add to homescreen for Safari on iOS -->
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <meta name="apple-mobile-web-app-title" content="Material Design Lite">
  <link rel="apple-touch-icon-precomposed" href="images/ios-desktop.png">

  <!-- Tile icon for Win8 (144x144 + tile color) -->
  <meta name="msapplication-TileImage" content="images/touch/ms-touch-icon-144x144-precomposed.png">
  <meta name="msapplication-TileColor" content="#3372DF">
  <link rel="shortcut icon" href="/favicon.ico" />
  <title>Customer Order System</title>

  <!-- Material Design Lite -->
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.deep_purple-blue.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>

  <!-- Google CDNs -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"> </script>
  <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css">
  <script src="https://apis.google.com/js/api:client.js"></script>

  <meta name="google-signin-scope" content="https://www.googleapis.com/auth/spreadsheets">
  <meta name="google-signin-client_id" content="234740802739-0lm6plfk1h5u5v2ud4dlubvc1ac1cc07.apps.googleusercontent.com">
  
  <!-- Local Assets -->
  <link rel="stylesheet" href="/styles.css">
  <script src="/script.js"></script>

</head>
<!-- section--center -->
<body class="mdl-demo mdl-base mdl-color--grey-100 mdl-color-text--grey-700 ">
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header has-tabs ">
  <header id="topHeader" class=" mdl-layout__header mdl-layout__header--scroll mdl-color--primary ">
      <div class="mdl-layout--large-screen-only mdl-layout__header-row"></div>
      <div class="mdl-layout__header-row">
        <h3><a href="/">Quites !</a></h3>
        <div class="mdl-layout-spacer"></div>
        <div id="spinner" class="mdl-spinner mdl-js-spinner"></div>
        {{#if locals.profile}}
        <div>
          <img class="image mdl-button--fab" src={{locals.profile.image}}></img>
        </div>
        <div id="profile"> 
          <b class="name">{{locals.profile.name}}</b><br/>
          <i class="email">{{locals.profile.email}}</i>
        </div>
        <div id="signOut" display="visible" >
          <a href="{{locals.logout}}" class="mdl-button mdl-js-button mdl-js-ripple-effect  mdl-shadow--4dp mdl-color--accent mdl-button--raised mdl-color-text--accent-contrast" >Sign out</a>
        </div>
        {{else}}
        <div id="gSignInWrapper" class=""> Sign in with:
          <a id="googleSignin" class="google-signin login  mdl-button mdl-js-button mdl-js-ripple-effect mdl-shadow--4dp mdl-color--accent mdl-button--raised" href={{locals.login}} >
           <img class="google-signin-icon " src='/img/g-logo.png' ></img>
           <span class="google-signin-text ">Google</span>
         </a>
       </div>
       {{/if}}
     </div>
     <div class="mdl-layout--large-screen-only mdl-layout__header-row"></div>
       <div id="tabs" class="mdl-layout__tab-bar mdl-js-ripple-effect mdl-color--primary-dark">
         <a href="#scroll-tab-Home"    class="mdl-layout__tab">Home</a>
         <a href="#scroll-tab-Pedidos" class="mdl-layout__tab is-active">Pedidos</a>
         <a href="#scroll-tab-Reports" class="mdl-layout__tab">Relat√≥rios</a>
       </div>
   </header>
   <!-- <div class="mdl-layout__drawer">
     <span class="mdl-layout-title">Menu</span>
   </div> -->
   <main class="mdl-layout__content page-content">
    {{{body}}}
    <footer class="demo-footer mdl-mini-footer">
      <div class="mdl-mini-footer--left-section">
        <ul class="mdl-mini-footer--link-list">
          <li><a href="#">Help</a></li>
          <li><a href="#">Privacy and Terms</a></li>
          <li><a href="#">User Agreement</a></li>
        </ul>
      </div>
      <div class="mdl-mega-footer--right-section">
        <a class="mdl-typography--font-light" href="#topHeader">
          Voltar ao Topo
          <i class="material-icons">expand_less</i>
        </a>
      </div>
    </footer>
  </main>
  <div id="snackbar" class="mdl-js-snackbar mdl-snackbar">
    <div class="mdl-snackbar__text"></div>
    <button class="mdl-snackbar__action" type="button"></button>
  </div>
</div>
</body>
</html>
