<div class="mdl-grid">
  <section id="orders" class="mdl-cell mdl-cell--8-col relative">
    <div class="mdl-grid">
      {{#each orders}}
      <div class="mdl-cell mdl-cell--6-col mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
          <h2 class="mdl-card__title-text">Pedido #{{id}}</h2>
        </div>
        <div class="mdl-card__supporting-text">
          <table class="order-details">
            <tr><th>Cliente</th><td>{{customerName}}</td></tr>
            <tr><th>Produto</th><td>{{productCode}}</td></tr>
            <tr><th>Quantidade</th><td>{{unitsOrdered}}</td></tr>
            <tr><th>Preço Unitário (R$)</th><td>{{unitPrice}}</td></tr>
            <tr><th>Status</th><td>{{status}}</td></tr>
          </table>
        </div>
        <div class="mdl-card__actions">
          <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent" href="/orders/close/{{id}}">Finalizar
            <i class="material-icons">done</i>
          </a>
          <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/orders/edit/{{id}}">Editar
            <i class="material-icons">edit</i>
          </a>
          <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/orders/delete/{{id}}">Deletar
            <i class="material-icons">delete</i>
          </a>
          <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="https://pag.ae/bcmHYXC">Pagar
            <i class="material-icons">payment</i>
          </a>
        </div>
      </div>
      {{/each}}
      <a class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored mdl-shadow--4dp mdl-color--accent" href="/orders/create">
        <i class="material-icons" role="presentation">add</i>
        <span class="visuallyhidden">Add</span>
      </a>
    </div>
  </section>
  <section id="spreadsheets" class="mdl-cell mdl-cell--4-col relative">
    <div class="mdl-list">
      <div class="mdl-list__item">
        <span class="mdl-list__item-primary-content mdl-layout-title">Relatórios</span>
        <span class="mdl-list__item-secondary-action">
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" rel="create" type="button">
            Criar
          </button>
        </span>
      </div>
      {{#each spreadsheets}}
      <div class="mdl-list__item">
        <a class="mdl-list__item-primary-content" href="https://docs.google.com/spreadsheets/d/{{id}}/edit" target="_blank">{{name}}
        </a>
        <span class="mdl-list__item-secondary-action">
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--fab mdl-js-ripple-effect" rel="delete" data-spreadsheetid="{{id}}" type="button">
            <i class="material-icons">clear</i>
            <span class="visuallyhidden">Remover</span>
          </button>
        </span>
      </div>
      {{/each}}
    </div>
  </section>
</div>
