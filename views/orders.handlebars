  <section id="scroll-tab-Pedidos" class="mdl-layout__tab-panel is-active">
    <a id="adicPedido" class="mdl-button mdl-js-button mdl-button--raised mdl-button--fab mdl-js-ripple-effect mdl-button--colored mdl-shadow--4dp mdl-color--accent" href="/orders/create">
      <i class="material-icons" role="presentation">add</i>
      <span class="visuallyhidden">Add</span>
    </a>
    <div class="mdl-grid">
      {{#each orders}}
      <!-- mdl-cell--3-col-desktop mdl-cell--2-col-tablet mdl-cell--4-col-phone -->
      <div class="mdl-cell mdl-cell--4-col  mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title">
          <h2 class="mdl-card__title-text">Pedido #{{id}}</h2>
        </div>
        <div class="mdl-card__supporting-text">
          <table class="order-details">
            <ul>
              <tr><th>Cliente</th><td>{{customerName}}</td></tr>
              <tr><th>Produto</th><td>{{productCode}}</td></tr>
              <tr><th>Quantidade</th><td>{{unitsOrdered}}</td></tr>
              <tr><th>Preço Unitário (R$)</th><td>{{unitPrice}}</td></tr>
              <tr><th>Status</th><td>{{status}}</td></tr>
            </ul>
          </table>
        </div>
        <div class="mdl-card__actions order-actions">
          <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent" href="/orders/close/{{id}}">Finalizar
            <i class="material-icons">done</i>
          </a>
          <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/orders/edit/{{id}}">Editar
            <i class="material-icons">edit</i>
          </a>
          <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/orders/delete/{{id}}">Deletar
            <i class="material-icons">delete</i>
          </a>
          <a class="mdl-button mdl-js-button mdl-js-ripple-effect" 
          onclick="PagSeguroLightbox('{{paymURL}}')" >Pagar
          <i class="material-icons">payment</i>
        </a>
      </div>
    </div>
    {{/each}}

    {{#unless orders}}
    <div class="mdl-cell mdl-cell--4-col mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Pedido #999</h2>
      </div>
      <div class="mdl-card__supporting-text">
        <table class="order-details " disabled>
          <ul>
            <tr><th>Cliente</th><td>João</td></tr>
            <tr><th>Produto</th><td>Produto 1</td></tr>
            <tr><th>Quantidade</th><td>1</td></tr>
            <tr><th>Preço Unitário (R$)</th><td>0,00</td></tr>
            <tr><th>Status</th><td>ENTREGUE</td></tr>
          </ul>
        </table>
      </div>
      <div class="mdl-card__actions order-actions">
        <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--accent" href="/orders/close/{{id}}" disabled>Finalizar
          <i class="material-icons">done</i>
        </a>
        <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/orders/edit/{{id}}" disabled>Editar
          <i class="material-icons">edit</i>
        </a>
        <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/orders/delete/{{id}}" disabled>Deletar
          <i class="material-icons">delete</i>
        </a>
        <a class="mdl-button mdl-js-button mdl-js-ripple-effect " href="/orders" disabled>Pagar
          <i class="material-icons">payment</i>
        </a>
      </div>
    </div>
    {{/unless}}
  </div>
</section>